#!/usr/bin/env bash

set -e

### constants ##################################################################

this_path="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

### variables ##################################################################

release_version="$(cat "$this_path/release_version")"

### build ######################################################################

BUILD_ARGS="" \
BUILD_DIR="$this_path/.." \
BUILD_VERSION="$release_version"

### build and run tests ########################################################

docker build $BUILD_ARGS --tag "quay.io/charter-ctec/napalm-base:$BUILD_VERSION" "$BUILD_DIR"
